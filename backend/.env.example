# Ekranchik Modern - Environment Configuration
# Copy this file to .env and fill in the values

# Application
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (stored in static folder)
DATABASE_URL=sqlite+aiosqlite:///../static/ekranchik.db

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Static files
STATIC_DIR=../static
IMAGES_DIR=../static/images

# Photo upload
MAX_UPLOAD_SIZE=10485760

# --- Global Simulation Switch ---
# Set to 'true' to enable simulation mode for OPC UA and test Excel data
SIMULATION_ENABLED=true

# --- OPC UA Configuration ---
# Set to 'true' to enable OPC UA service (regardless of simulation status)
OPCUA_ENABLED=true
OPCUA_ENDPOINT=opc.tcp://172.17.11.115:4840/
OPCUA_POLL_INTERVAL=1.0

# OPC UA Simulation Settings (used when SIMULATION_ENABLED=true)
OPCUA_SIM_ENDPOINT=opc.tcp://127.0.0.1:4840/freeopcua/server/
OPCUA_SIM_POLL_INTERVAL=1.0

# Excel file paths
# Real file path (used when SIMULATION_ENABLED=false)
EXCEL_REAL_FILE_PATH=\\ktm-disk\Оператор/Учет КПЗ 2026.xlsm
# Test file path (used when SIMULATION_ENABLED=true)
EXCEL_TEST_FILE_PATH=../testdata/Учет КПЗ 2026.xlsm
