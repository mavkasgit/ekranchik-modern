# Ekranchik Modern - Environment Configuration
# Copy this file to .env and fill in the values

# Application
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database (stored in static folder)
DATABASE_URL=sqlite+aiosqlite:///./static/ekranchik.db

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://ktm.local"]

# Excel file path (full path to .xlsm file)
EXCEL_FILE_PATH=D:/path/to/your/data.xlsm

# FTP Configuration (Omron PLC)
FTP_HOST=172.17.11.194
FTP_PORT=21
FTP_USER=omron
FTP_PASSWORD=12345678
FTP_BASE_PATH=/MEMCARD1/messages/
FTP_LOG_DIR=../testdata/ftp
FTP_POLL_INTERVAL=15
FTP_DAYS_TO_READ=2

# Telegram Bot
TELEGRAM_TOKEN=your_bot_token_here
BOT_PASSWORD=1122

# Static files
STATIC_DIR=static
IMAGES_DIR=static/images

# Photo upload
MAX_UPLOAD_SIZE=10485760

# ===========================================
# Windows hosts file setup (run as admin):
# Add this line to C:\Windows\System32\drivers\etc\hosts
# 127.0.0.1 ktm.local
# ===========================================
